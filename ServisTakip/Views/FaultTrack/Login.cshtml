@model ServisTakip.Models.Login.request.LoginRequestModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            margin-top: 100px;
        }

        .login-form {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px 0px #000000;
        }

            .login-form h2 {
                text-align: center;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            height: 40px;
        }

        .btn-login {
            background-color: #007bff;
            color: #ffffff;
        }

            .btn-login:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 login-container">
                <form class="login-form" method="post" action="/FaultTrack/Login">
                    <h2>Login</h2>
                    <div class="form-group">
                        <label for="ProductSerialNumber">Product Serial Number:</label>
                        <input type="text" class="form-control" id="ProductSerialNumber" name="ProductSerialNumber" placeholder="Enter your product serial number">
                    </div>
                    <div class="form-group">
                        <label for="FaultDocumentNumber">Fault Document Number:</label>
                        <input type="text" class="form-control" id="FaultDocumentNumber" name="FaultDocumentNumber" placeholder="Enter your fault document number">
                    </div>
                    <button type="submit" class="btn btn-primary btn-login btn-block">Login</button>
                    @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <br />
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*   <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    *@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
