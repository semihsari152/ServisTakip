@model ServisTakip.Models.FaultTrack.request.FaultTrackRequestModel

@{
    ViewData["Title"] = "AddFaultTrack";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="section">
    <div class="section-header">
        <h1>Servis Takip Formu Oluşturma</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="#">Forms</a></div>
            <div class="breadcrumb-item">Advanced Forms</div>
        </div>
    </div>

    <div class="section-body">
        <form method="post" action="/Admin/AddFaultTrack">
            <div class="row">
                <!-- Cihaz Bilgileri -->
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Cihaz Bilgileri</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Cihaz</label>
                                <input type="text" name="Product.ProductName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Cihaz Seri No</label>
                                <input type="text" name="Product.ProductSerialNumber" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Cihaz Türü</label>
                                <select name="Product.ProductType" class="form-control selectric">
                                    <option>Laptop</option>
                                    <option>Telefon</option>
                                    <option>Tablet</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Cihaz Aksesuarları</label>
                                <input type="text" name="Product.ProductAccessories" class="form-control inputtags">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Müşteri Bilgileri -->
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Müşteri Bilgileri</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Müşteri Adı Soyadı</label>
                                <input type="text" name="Customer.CustomerName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Müşteri Telefon No</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </div>
                                    </div>
                                    <input type="text" name="Customer.CustomerPhone" class="form-control phone-number">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Müşteri E-Mail</label>
                                <input type="text" name="Customer.CustomerEmail" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Müşteri Konum</label>
                                <input type="text" name="Customer.CustomerCity" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Arıza Bilgileri -->
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Arıza Bilgileri</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Çalışan Ad Soyad</label>
                                <input type="text" name="FaultWorkerName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Servis Takip No</label>
                                <input type="text" name="FaultDocumentNumber" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Arıza Tanımı</label>
                                <input type="text" name="FaultDefinition" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Arıza Açıklaması</label>
                                <input type="text" name="FaultDescription" class="form-control inputtags">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Teslimat Bilgileri -->
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Teslimat Bilgileri</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Teslim Alınma Tarihi</label>
                                <input type="text" name="FaultCreateDate" class="form-control datetimepicker">
                            </div>
                            <div class="form-group">
                                <label>Durum Güncellenme Tarihi</label>
                                <input type="text" name="FaultUpdateDate" class="form-control datetimepicker">
                            </div>
                            <div class="form-group">
                                <label>Tahmini Teslimat Tarihi</label>
                                <input type="text" name="EstimatedDeliveryDate" class="form-control datepicker">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Güncel Cihaz Durumu</label>
                                <div class="selectgroup w-100">
                                    <label class="selectgroup-item">
                                        <input type="radio" name="FaultStage" value="1" class="selectgroup-input">
                                        <span class="selectgroup-button selectgroup-button-icon"><i class="fas fa-mobile"></i></span>
                                    </label>
                                    <label class="selectgroup-item">
                                        <input type="radio" name="FaultStage" value="2" class="selectgroup-input" checked="">
                                        <span class="selectgroup-button selectgroup-button-icon"><i class="fas fa-tablet"></i></span>
                                    </label>
                                    <label class="selectgroup-item">
                                        <input type="radio" name="FaultStage" value="3" class="selectgroup-input">
                                        <span class="selectgroup-button selectgroup-button-icon"><i class="fas fa-laptop"></i></span>
                                    </label>
                                    <label class="selectgroup-item">
                                        <input type="radio" name="FaultStage" value="4" class="selectgroup-input">
                                        <span class="selectgroup-button selectgroup-button-icon"><i class="fas fa-times"></i></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
</section>

<!-- JS Libraies -->
<script src="assets/modules/cleave-js/dist/cleave.min.js"></script>
<script src="assets/modules/cleave-js/dist/addons/cleave-phone.us.js"></script>
<script src="assets/modules/jquery-pwstrength/jquery.pwstrength.min.js"></script>
<script src="assets/modules/bootstrap-daterangepicker/daterangepicker.js"></script>
<script src="assets/modules/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
<script src="assets/modules/bootstrap-timepicker/js/bootstrap-timepicker.min.js"></script>
<script src="assets/modules/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
<script src="assets/modules/select2/dist/js/select2.full.min.js"></script>
<script src="assets/modules/jquery-selectric/jquery.selectric.min.js"></script>

<!-- Page Specific JS File -->
<script src="assets/js/page/forms-advanced-forms.js"></script>