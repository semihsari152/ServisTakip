@using ServisTakip.Models.Customer.response
@model List<CustomerResponseModel>


@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="section">
    <div class="section-header">
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="#">Modules</a></div>
            <div class="breadcrumb-item">Müşteriler</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Müşteriler</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="table-2">
                                <thead>
                                    <tr>

                                        <th>Müşteri Adı Soyadı</th>
                                        <th>Telefon No</th>
                                        <th>E-Mail</th>
                                        <th>Şehir</th>
                                        <th>İlçe</th>
                                        <th>Servis Kayıtları</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CustomerName</td>
                                            <td>@item.CustomerPhone</td>
                                            <td>@item.CustomerEmail</td>
                                            <td>@item.CustomerCity</td>
                                            <td>@item.CustomerCounty</td>
                                            <td><a href="/Admin/CustomerDetails/@item.CustomerID" class="btn btn-secondary">Detaylar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="/Admin/AddCustomer" class="btn btn-icon icon-left btn-primary"><i class="far fa-edit"></i> Yeni Müşteri Kaydı Ekle</a>
    </div>
</section>

<!-- JS Libraies -->
