@model ServisTakip.Models.FaultTrack.response.FaultTrackResponseModel

@{
    ViewData["Title"] = "DeviceDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="section">
    <div class="section-header">
        <h1>Cihazlar</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="#">Modules</a></div>
            <div class="breadcrumb-item">Cihazlar</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12 col-sm-6 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h4># @Model.FaultDocumentNumber</h4>
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Cihaz</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Müşteri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="fault-tab" data-toggle="tab" href="#fault" role="tab" aria-controls="fault" aria-selected="false">Arıza</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Teslimat</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <strong>Cihaz :</strong>                        @Model.Product.ProductName <br />
                                <strong>Cihaz Seri No :</strong>                @Model.Product.ProductSerialNumber <br />
                                <strong>Cihaz Türü :</strong>                   @Model.Product.ProductType <br>
                                <strong>Cihaz Aksesuarları :</strong>           @Model.Product.ProductAccessories
                            </div>
                            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                <strong>Müşteri Ad Soyad:</strong>              @Model.Customer.CustomerName <br>
                                <strong>Müşteri Telefon No :</strong>           @Model.Customer.CustomerPhone <br />
                                <strong>Müşteri E-Mail :</strong>               @Model.Customer.CustomerEmail <br />
                                <strong>Müşteri Konum :</strong>                @Model.Customer.CustomerCity / @Model.Customer.CustomerCounty
                            </div>
                            <div class="tab-pane fade" id="fault" role="tabpanel" aria-labelledby="fault-tab">
                                <strong>Çalışan Ad Soyad :</strong>             @Model.FaultWorkerName <br />
                                <strong>Servis Takip No :</strong>              @Model.FaultDocumentNumber <br />
                                <strong>Arıza Tanımı :</strong>                 @Model.FaultDefinition <br />
                                <strong>Arıza Açıklaması : </strong>            @Model.FaultDescription
                            </div>
                            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                <strong>Teslim Alınma Tarihi :</strong>         @Model.FaultCreateDate <br />
                                <strong>Güncel Cihaz Durumu :</strong>          @Model.FaultStage <br />
                                <strong>Durum Güncellenme Tarihi : </strong>    @Model.FaultUpdateDate <br />
                                <strong>Tahmini Teslimat Tarihi :</strong>      @Model.EstimatedDeliveryDate
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Gallery <code>.gallery-md</code></h4>
                    </div>
                    <div class="card-body">
                        <div class="gallery gallery-md">
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img03.jpg" data-title="Image 1"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img14.jpg" data-title="Image 2"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img08.jpg" data-title="Image 3"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img05.jpg" data-title="Image 4"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img11.jpg" data-title="Image 5"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img09.jpg" data-title="Image 6"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img12.jpg" data-title="Image 8"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img13.jpg" data-title="Image 9"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img14.jpg" data-title="Image 10"></div>
                            <div class="gallery-item" data-image="/stisla-1-2.2.0/dist/assets/img/news/img15.jpg" data-title="Image 11"></div>
                            <div class="gallery-item gallery-more" data-image="/stisla-1-2.2.0/dist/assets/img/news/img08.jpg" data-title="Image 12">
                                <div>+2</div>
                            </div>
                            <div class="gallery-item gallery-hide" data-image="assets/img/news/img01.jpg" data-title="Image 9"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="/Admin/UpdateFaultTrack/@Model.FaultTrackingID" class="btn btn-icon icon-left btn-warning"><i class="fas fa-exclamation-triangle"></i> Güncelle</a>
        <a href="/Admin/DeleteFaultTrack/@Model.FaultTrackingID" class="btn btn-icon icon-left btn-danger"><i class="fas fa-times"></i> Sil</a>
    </div>
</section>